---
import { getRelativeLocaleUrl } from "astro:i18n";
import items from "@spanish.json";

import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import Navbar from "@/components/Navbar.astro";
import Review from "@/components/Review.astro";

const enIndex = getRelativeLocaleUrl("en");
---

<Layout language="es" title="Steam Review Creator (ES)">
  <Navbar url={enIndex} name="Inglés" />

  <Hero
    title="Creador de Reseñas de Steam"
    text="Crea una reseña para tus juegos favoritos de Steam"
  />

  <Review
    items={items}
    buttonText="Copiar Reseña"
    alertText="Por favor, selecciona una opción para cada categoría."
    copiedText="¡Reseña copiada al portapapeles!"
    sourceTitle="Hecho con"
  />
</Layout>
